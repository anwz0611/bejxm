<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/news_summary_card_view"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wsf_cd"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/selector_item_clickable"
        android:minHeight="90dp" >

       <LinearLayout
           android:id="@+id/textView1"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:layout_marginLeft="8dp"
           android:gravity="center"
           android:orientation="vertical" >

           <TextView
               android:id="@+id/admn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="华亭县"
               android:textSize="16sp"
               android:textColor="@color/gray_text3" />

           <TextView
               android:id="@+id/admn_city"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="（兴国镇）"
               android:textColor="@color/gray"
               android:textSize="12sp"
               android:visibility="gone" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/linearLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="15dp"
           android:layout_toRightOf="@+id/textView9"
           android:minHeight="90dp"
           android:orientation="vertical"
           android:paddingBottom="10dp"
           android:paddingTop="10dp" >

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1" >

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="长度："
                   android:textColor="@color/gray_text2" />

               <TextView
                   android:id="@+id/totalp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/textView2"
                   android:text=""
                   android:textColor="@color/gray_text2"  />

               <TextView
                   android:id="@+id/textView4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="20dp"
                   android:text="家庭户数：156125"
                   android:textColor="@color/gray_text2"  />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1" >

               <TextView
                   android:id="@+id/textView5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="耕地面积：15386亩"
                   android:textColor="@color/gray_text2"
                   android:visibility="gone"/>

               <TextView
                   android:id="@+id/textView6"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="20dp"
                   android:text="房屋：74192间"
                   android:textColor="@color/gray_text2" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="15dp"
               android:layout_weight="1"
               >

               <TextView
                   android:id="@+id/textView7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="单位："
                   android:textColor="@color/gray_text2" />

               <TextView
                   android:id="@+id/textView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/textView7"
                   android:text=""
                   android:textColor="@color/gray_text2"  />
           </RelativeLayout>
       </LinearLayout>

       <TextView
           android:id="@+id/textView9"
           android:layout_width="0.5dp"
           android:layout_height="70dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="8dp"
           android:layout_toRightOf="@+id/textView1"
           android:background="@color/lines" />






    </RelativeLayout>



</android.support.v7.widget.CardView>